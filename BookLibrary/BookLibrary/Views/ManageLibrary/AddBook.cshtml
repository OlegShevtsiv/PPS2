@using Services.Interfaces;
@model BookLibrary.ViewModels.ManageLibrary.AddBookViewModel
@{
    ViewData["Title"] = "Add new book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject IAuthorService  authorService

<h2 class="mt-5">Adding new book</h2>
<div class="row">
    <div class="col-12">
        <form asp-action="AddBook" asp-controller="ManageLibrary" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input type="text" asp-for="Title" class="form-control" required />
            </div>
            <div class="form-row mt-5">
                <div class="col-1 d-flex align-items-center">
                    <label asp-for="AuthorId" class="control-label"></label>
                </div>
                <div class="col">
                    <select type="text" asp-for="AuthorId" class="form-control form-control-lg" required>
                        @foreach (var a in authorService.GetAll())
                        {
                            <option value="@a.Id">@a.Name @a.Surname</option>
                        }
                    </select>
                </div>
                <div class="col-2 d-flex justify-content-end">
                    <a class="btn btn-sm btn-success" asp-action="AddAuthor">Add new author</a>
                </div>
            </div>
            <div class="form-row my-5">
                <div class="col">
                    <label asp-for="Year" class="control-label"></label>
                    <input type="number" asp-for="Year" class="form-control form-control-lg" required />
                </div>
                <div class="col">
                    <label asp-for="Image" class="control-label"></label>
                    <input type="file" asp-for="Image" class="form-control form-control-lg" required />
                </div>
                <div class="col">
                    <label asp-for="FileBook" class="control-label"></label>
                    <input type="file" asp-for="FileBook" class="form-control form-control-lg" required />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input type="text" asp-for="Genre" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea type="text" asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="form-row my-5">
                <div class="col-lg-2">
                    @*<label asp-for="Rate" class="control-label"></label>*@
                    <input type="number" asp-for="Rate" value="0" hidden />

                    @*<select type="number" asp-for="Rate" class="form-control" required>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>*@
                </div>
                <div class="col-lg-2">
                    @*<label asp-for="RatesAmount" class="control-label"></label>*@
                    <input type="number" asp-for="RatesAmount" value="0" hidden />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>